{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Hosts",
	"scopeName": "text.hosts",
	"fileTypes": ["hosts"],
	"uuid": "c83f4a91-7b6e-5c2d-8e7f-3a2b1c0d9e8f",
	"patterns": [
		{
			"name": "comment.line.number-sign.hosts",
			"match": "^\\s*#.*$"
		},
		{
			"name": "comment.line.number-sign.hosts",
			"match": "\\s+#.*$"
		},
		{
			"name": "meta.entry.hosts",
			"match": "^\\s*((?:\\d{1,3}\\.){3}\\d{1,3}|(?:[0-9a-fA-F:]+:)+[0-9a-fA-F]+)\\s+([\\w.-]+(?:\\s+[\\w.-]+)*)\\s*$",
			"captures": {
				"1": { "name": "constant.numeric.ip-address.hosts" },
				"2": { "name": "string.unquoted.domain.hosts" }
			}
		},
		{
			"name": "constant.numeric.ip-address.hosts",
			"match": "\\b(?:\\d{1,3}\\.){3}\\d{1,3}\\b"
		},
		{
			"name": "constant.numeric.ip-address.hosts",
			"match": "\\b(?:[0-9a-fA-F:]+:)+[0-9a-fA-F]+\\b"
		},
		{
			"name": "string.unquoted.domain.hosts",
			"match": "\\b[\\w.-]+\\b"
		}
	]
}

{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "SVG",
	"scopeName": "source.svg",
	"fileTypes": ["svg"],
	"uuid": "d4e5f6a7-b8c9-0d1e-2f3a-4b5c6d7e8f90",
	"patterns": [
		{
			"name": "comment.block.svg",
			"begin": "<!--",
			"end": "-->"
		},
		{
			"name": "meta.tag.xml.svg",
			"begin": "<\\??xml",
			"end": "\\?>",
			"patterns": [
				{
					"include": "#attribute"
				}
			]
		},
		{
			"name": "meta.tag.svg",
			"begin": "<(?!/)",
			"end": "/?>",
			"patterns": [
				{
					"name": "entity.name.tag.svg",
					"match": "^<([a-zA-Z0-9:-]+)",
					"captures": {
						"1": {
							"name": "entity.name.tag.localname.svg"
						}
					}
				},
				{
					"include": "#attribute"
				}
			]
		},
		{
			"name": "meta.tag.close.svg",
			"match": "</[a-zA-Z0-9:-]+>",
			"captures": {
				"0": {
					"patterns": [
						{
							"name": "punctuation.definition.tag.svg",
							"match": "^</"
						},
						{
							"name": "entity.name.tag.svg",
							"match": "[a-zA-Z0-9:-]+"
						},
						{
							"name": "punctuation.definition.tag.svg",
							"match": ">"
						}
					]
				}
			}
		},
		{
			"name": "string.quoted.double.svg",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.svg",
					"match": "\\\\."
				}
			]
		},
		{
			"name": "string.quoted.single.svg",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.svg",
					"match": "\\\\."
				}
			]
		},
		{
			"name": "keyword.svg.element",
			"match": "\\b(circle|rect|line|path|polygon|polyline|ellipse|g|defs|use|image|text|tspan|tref|textPath|marker|pattern|linearGradient|radialGradient|stop|clipPath|mask|filter|feGaussianBlur|feColorMatrix|feComposite|feBlend|animate|animateTransform|set)\\b"
		},
		{
			"name": "support.attribute.svg",
			"match": "\\b(id|class|style|width|height|viewBox|preserveAspectRatio|fill|stroke|stroke-width|stroke-dasharray|stroke-linecap|stroke-linejoin|cx|cy|r|x|y|dx|dy|x1|y1|x2|y2|d|points|rx|ry|font-family|font-size|text-anchor|transform|opacity|display|visibility|href|xlink:href)\\b"
		},
		{
			"name": "constant.numeric.svg",
			"match": "\\b(\\d+\\.?\\d*|\\.\\d+)(px|em|rem|pt|pc|in|cm|mm|%|deg|rad|grad|turn)?\\b"
		},
		{
			"name": "constant.color.svg",
			"match": "\\b(rgba?\\([^)]+\\)|#[0-9a-fA-F]{3,8}|[a-zA-Z]+)\\b"
		},
		{
			"name": "meta.style.svg",
			"begin": "<style",
			"end": "</style>",
			"patterns": [
				{
					"include": "source.css"
				}
			]
		},
		{
			"name": "meta.script.svg",
			"begin": "<script",
			"end": "</script>",
			"patterns": [
				{
					"include": "source.js"
				}
			]
		}
	],
	"repository": {
		"attribute": {
			"patterns": [
				{
					"name": "meta.attribute-with-value.svg",
					"match": "([a-zA-Z0-9:-]+)\\s*=\\s*((\"[^\"]*\")|('[^']*'))",
					"captures": {
						"1": {
							"name": "entity.other.attribute-name.svg"
						},
						"2": {
							"patterns": [
								{
									"name": "string.quoted.double.svg",
									"match": "\"[^\"]*\""
								},
								{
									"name": "string.quoted.single.svg",
									"match": "'[^']*'"
								}
							]
						}
					}
				},
				{
					"name": "entity.other.attribute-name.svg",
					"match": "[a-zA-Z0-9:-]+"
				}
			]
		}
	}
}

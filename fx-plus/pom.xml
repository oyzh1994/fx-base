        <!-- xml类库 -->
        <!-- https://mvnrepository.com/artifact/org.dom4j/dom4j -->
        <dependency>
            <groupId>org.dom4j</groupId>
            <artifactId>dom4j</artifactId>
        </dependency>

        <!-- 自定义类库，通用 -->
        <dependency>
            <groupId>cn.oyzh</groupId>
            <artifactId>fx-common</artifactId>
        </dependency>

        <!--Spring 注解支持-->
        <dependency>
